<Window x:Class="OpenEdgeHPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="521.087" Width="886.182">
    <Grid Margin="0,0,-8,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="710*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="amountText" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="10,31,0,0" TextWrapping="Wrap" Text="Enter Amount" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Amount:" VerticalAlignment="Top" RenderTransformOrigin="-0.151,0.615" Height="21" Width="111" IsManipulationEnabled="True" FontWeight="Bold"/>
        <Button x:Name="submitButton" Content="Submit" Grid.Column="2" HorizontalAlignment="Left" Margin="10,59,0,0" VerticalAlignment="Top" Width="75" Click="submitButton_Click"/>
        <WebBrowser x:Name="hpfBrowser" Grid.Column="2" HorizontalAlignment="Left" Height="373" Margin="10,98,0,0" VerticalAlignment="Top" Width="399"/>

    </Grid>
</Window>
